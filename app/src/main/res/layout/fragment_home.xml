<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_marginTop="20dp"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/female">

            </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_margin="5dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello user,"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:textSize="18sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:padding="20dp"
                android:id="@+id/btnAdProject"
                style="@style/HomeImageButtonStyle"
                android:drawableTop="@drawable/multitasking"
                android:text="Add Project"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:padding="20dp"
                android:id="@+id/btnAdTask"
                style="@style/HomeImageButtonStyle"
                android:drawableTop="@drawable/task_manager"
                android:text="Add Task">

            </com.google.android.material.button.MaterialButton>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btnGetProjects"-->
<!--                android:drawableTop="@drawable/add_project"-->
<!--                android:text="Update Projects"-->
<!--                 style="@style/HomeImageButtonStyle">-->
<!--            </com.google.android.material.button.MaterialButton>-->

<!--            <com.google.android.material.button.MaterialButton-->
<!--                style="@style/HomeImageButtonStyle"-->
<!--                android:text="Update Tasks"-->
<!--                android:drawableTop="@drawable/tasklist"-->
<!--                android:id="@+id/btnGetTasks">-->
<!--            </com.google.android.material.button.MaterialButton>-->


        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:text="Assigned Tasks"
        android:id="@+id/btnAssignedTasks"
        style="@style/ButtonStyle">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:text="Pending Items"
        android:id="@+id/btnpendingItems"
        style="@style/ButtonStyle">
    </com.google.android.material.button.MaterialButton>

</LinearLayout>
</ScrollView>